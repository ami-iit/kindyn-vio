#ifndef RESOURCE_FOLDERPATH_H_IN
#define RESOURCE_FOLDERPATH_H_IN

#include <string>

#define SOURCE_CONFIG_DIR "@CMAKE_CURRENT_SOURCE_DIR@"

inline std::string getiCubURDFModelPath()
{
    return std::string(SOURCE_CONFIG_DIR) + "/data/model.urdf";
}

inline std::string getTestDatasetPath()
{
    return std::string(SOURCE_CONFIG_DIR) + "/data/sync-walk-est.mat";
}

#endif // RESOURCE_FOLDERPATH_H_IN

